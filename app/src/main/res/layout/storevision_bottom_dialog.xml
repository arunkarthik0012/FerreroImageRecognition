<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_dialog_bg"
    android:layout_margin="10dp"
    android:layout_marginBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Vision"
        android:textSize="18sp"
        android:padding="5sp"
        android:textColor="@color/black"
        android:id="@+id/new_vision"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:drawableLeft="@drawable/ic_close"
        android:id="@+id/close_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Type"
        android:padding="5sp"
        android:id="@+id/type"
        android:layout_below="@+id/new_vision"
        android:layout_marginTop="20sp"/>


    <Spinner
        android:layout_width="350dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="10dp"
        android:padding="5sp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:id="@+id/category_spinner"
        android:layout_below="@+id/category_dialog"/>



    <TextView
        android:layout_width="wrap_content"
        android:padding="5sp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Category"
        android:id="@+id/category_dialog"
        android:layout_below="@+id/type_spinner"
        android:layout_marginTop="10sp"/>


    <Spinner
        android:layout_width="350dp"
        android:padding="3sp"
        android:elevation="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="30dp"
        android:id="@+id/type_spinner"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/type"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/take_pictures"
        android:text="Take Pictures in Grid"
        android:layout_marginBottom="10sp"
        style="?attr/roundedCustomButtonNormal"
        android:layout_below="@+id/category_spinner"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20sp"/>


</RelativeLayout>